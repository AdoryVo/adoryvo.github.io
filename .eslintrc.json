{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "ignorePatterns": ["bundle.js"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": ["error", "always"],
        "brace-style": ["error", "1tbs"],
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
        "no-prototype-builtins": "off",
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
